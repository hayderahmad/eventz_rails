
    <% @events.each do |event|%>
        <section class="event">
            <div class="summary">
                
                <%= image_tag event.image_file_name%> <h2><%=link_to event.name, event_path(event)%></h2>
                <h3><%= day_and_time(event) %>in <%=event.location%>:</h3>
                <span class= "price">
                    <%=price(event)%>
                </span>
                
        
                <p>
                <%= truncate(event.description, length:15, separator: " ") %>
                </p>
                <p>
                </p>
            </div>
        </section>
    <%end%>

<section class="admin">
    <%= link_to "Add new Event", new_event_path, class: "button"%>

</section>
