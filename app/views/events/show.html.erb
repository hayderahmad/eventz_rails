<section class="event-details">
            <div class="image">
                <%= image_tag @event.image_file_name%>
            </div>
    <div calss="details">
        <h1><%=@event.name%></h1>
        <h2>
            <%= pluralize(@event.capacity, "spot")%> . <%= price(@event)%>
        </h2>
        <h3>
            <%=day_and_time(@event)%> in <%=@event.location%>
        </h3>
        <p>
            <%=@event.description%>
        </p>
    </div>
</section>
<section class= "admin">
    <%= link_to "Edit", edit_event_path(@event), class: "button"%>
    <%= link_to "Delete", @event, class: "button", method: :delete, data: { confirm: "Really?!"}%>
    <%= link_to "Destroy", event_path(@event), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</section>