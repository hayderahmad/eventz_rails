<h1>Create new Event</h1>
<%if @event.errors.any?%>
    
        <h2>
        Oops! Your form could not be saved.
        </h2>
        <h3>
        Please correct the following
        <%= pluralize(@event.errors.size, "error")%>:
        </h3>
        <ul>
        <% @event.errors.full_messages.each do |message|%>
        <li><%= message%></li>
        <%end%>
        </ul>
    
<%end%>
<%= render "form", event: @event%>